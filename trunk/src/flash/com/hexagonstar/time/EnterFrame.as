s Sprite	 *		{	 *			private var _enterFrame:EnterFrame;	 *				 *			public function Example()	 *			{	 *				_enterFrame = EnterFrame.instance;	 *				_enterFrame.addEventListener(Event.ENTER_FRAME, onEnterFrame);	 *			}	 *				 *			private function onEnterFrame(e:Event):void	 *			{	 *				trace("I will be called every frame.");	 *			}	 *		}	 *	}	 * </pre>	 */	public class EnterFrame extends EventDispatcher	{		//-----------------------------------------------------------------------------------------		// Properties		//-----------------------------------------------------------------------------------------				/** @private */		protected static var _instance:EnterFrame;		/** @private */		protected static var _singletonLock:Boolean = false;		/** @private */		protected static var _shape:Shape;						//-----------------------------------------------------------------------------------------		// Constructor		//-----------------------------------------------------------------------------------------				/**		 * Creates a new EnterFrame instance.		 */		public function EnterFrame()		{			super();						if (!_singletonLock) throw new SingletonException(this);						_shape = new Shape();			_shape.addEventListener(Event.ENTER_FRAME, onEnterFrame, false, 0, true);		}						//-----------------------------------------------------------------------------------------		// Getters & Setters		//-----------------------------------------------------------------------------------------				/**		 * Returns the singleton instance of EnterFrame.		 */		public static function get instance():EnterFrame		{			if (_instance == null)			{				_singletonLock = true;				_instance = new EnterFrame();				_singletonLock = false;			}			return _instance;		}						//-----------------------------------------------------------------------------------------		// Event Handlers		//-----------------------------------------------------------------------------------------				/**		 * @sends Event#ENTER_FRAME - Dispatched when a new frame is entered.		 * @private		 */		protected function onEnterFrame(e:Event):void		{			dispatchEvent(e);		}	}}