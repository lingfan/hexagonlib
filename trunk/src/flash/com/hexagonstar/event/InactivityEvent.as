------------------------------------------------- 		 		/** @private */		protected var _ms:uint; 		 		 		//----------------------------------------------------------------------------------------- 		// Constructor 		//----------------------------------------------------------------------------------------- 				/**		 * Creates a new InactivityEvent.		 * 		 * @param type The type of event.		 * @param milliseconds		 */		public function InactivityEvent(type:String, milliseconds:uint = 0)		{			super(type, false, false);			_ms = milliseconds;		}						//-----------------------------------------------------------------------------------------		// Public Methods		//-----------------------------------------------------------------------------------------				/**		 * Clones the event object.		 * 		 * @return a clone of the event.		 */		override public function clone():Event		{			return new InactivityEvent(type, _ms);		}						//-----------------------------------------------------------------------------------------		// Getters & Setters		//-----------------------------------------------------------------------------------------				/**		 * The length of time an user has been inactive.		 */		public function get milliseconds():uint 		{			return _ms;		}		public function set milliseconds(v:uint):void 		{			_ms = v;		}						/**		 * Returns the inactive time as a Time object.		 */		public function get time():Time		{			return new Time(_ms);		}	}}