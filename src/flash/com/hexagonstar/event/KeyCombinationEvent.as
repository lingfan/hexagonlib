-------------------------		// Properties		//-----------------------------------------------------------------------------------------				/** @private */		protected var _kc:KeyCombination;						//-----------------------------------------------------------------------------------------		// Constructor		//-----------------------------------------------------------------------------------------				/**		 * Creates a new KeyCombinationEvent.		 * 		 * @param type The type of event.		 * @param keyCombination		 */		public function KeyCombinationEvent(type:String, keyCombination:KeyCombination = null)		{			super(type, false, false);			_kc = keyCombination;		}						//-----------------------------------------------------------------------------------------		// Public Methods		//-----------------------------------------------------------------------------------------				/**		 * Clones the event object.		 * 		 * @return a clone of the event.		 */		override public function clone():Event		{			return new KeyCombinationEvent(type, _kc);		}						//-----------------------------------------------------------------------------------------		// Getters & Setters		//-----------------------------------------------------------------------------------------				/**		 * The KeyCombination that contains the key codes that triggered the event.		 */		public function get keyCombination():KeyCombination		{			return _kc;		}		public function set keyCombination(v:KeyCombination):void		{			_kc = v;		}	}}