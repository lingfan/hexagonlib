-		// Properties		//-----------------------------------------------------------------------------------------				/** @private */		protected var _disposed:Boolean = false;						//-----------------------------------------------------------------------------------------		// Public Methods		//-----------------------------------------------------------------------------------------				/**		 * @inheritDoc		 */		public function dispose():void		{			_disposed = true;		}						//-----------------------------------------------------------------------------------------		// Getters & Setters		//-----------------------------------------------------------------------------------------				/**		 * @inheritDoc		*/		public function get disposed():Boolean		{			return _disposed;		}	}}